generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Humidor {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  cigars      Cigar[]
  userId      Int
}

model Cigar {
  id          Int      @id @default(autoincrement())
  name        String
  brand       String?
  description String?
  image       String?
  humidor     Humidor? @relation(fields: [humidorId], references: [id])
  humidorId   Int?
  userId      Int
}

model Lounge {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
}
